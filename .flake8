[flake8]
# Maximum number of characters in a line
max-line-length = 79

# Ignore specific rules (comma-separated)
ignore = E203, E266, E501, W503, W291, W293, W292

# Select the specific errors or warnings to show
select = E, F, W

# Exclude certain files or directories from linting (comma-separated)
exclude = .git,__pycache__,docs,tests

# Allow the use of some specific import styles in Flask apps
# (e.g., using relative imports in Flask blueprints)
# (this is optional)
per-file-ignores =
    # Allow relative imports in Flask blueprints
    src/*.py: F403,F405

# Additional settings (optional)
# You can adjust these further based on your specific needs